{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "cypress"],
    "resolveJsonModule": true,
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue"],
  "exclude": ["node_modules", "dist", "public", "tests"]
}
